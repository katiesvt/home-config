function fish_greeting
  fortune -as
end

function ls
  ls -GFha $argv
end

function mkdir
  mkdir -pv $argv
end

function top
  atop $argv
end

function df
  df -H $argv
end

function du
  du -ch
end

function bi
  bundle install $argv
end

function be
  bundle exec $argv
end

function pman
  man -t $argv | open -f -a /Applications/Preview.app/
end

function brup
  brew update
  brew outdated
end

function g
  git $argv
end

rvm default
